{
  "name": "ng-base",
  "version": "0.0.0",
  "scripts": {
    "git:push:m1":"git subtree push --prefix src/app/modules/module-1 https://github.com/akaiserg/ng6-subtree-modules-feature1.git  master",
    "serve:team-1":"ng serve --project=team1",
    "serve": "ng serve",
    "serve:aot": "ng serve --aot",
    "ng:build": "ng build --prod",
    "ngw:build": "ngw build --prod",
    "serve:dist": "npm run  ngw:build && superstatic dist/ng-base --port 8080 --host 127.0.0.1",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --runInBand",
    "test:bail": "jest --bail",
    "lint": "ng lint",
    "lint:fix": "ng lint --format codeFrame --fix",
    "format": "prettier src/**/*.{ts,tsx,json,md} --write",
    "verify": "npm run  format -l && npm run  lint",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "if  git-branch-is -q master2; then  npm run  format && npm run lint ; else echo \"no scripts for this branch\"; fi",
    "prepush": "if git-branch-is -q noset; then  echo \"no set yet\"; else echo \"no scripts for this branch\"; fi",
    "stub:service-one": "SERVICE_PORT=5000 node stubs/service-one/server.js",
    "stub:service-two": "SERVICE_PORT=5001 node stubs/service-two/server.js",
    "stub:all": "npm-run-all -p stub:service-one stub:service-two",
    "hotel:pre": "hotel stop &&  hotel add 'SERVICE_PORT=5000 node stubs/service-one/server.js' --name service_one && hotel add 'SERVICE_PORT=5001 node stubs/service-two/server.js' --name service_two",
    "hotel:start": "hotel start",
    "hotel:stop": "hotel stop"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        200
      ],
      "header-min-length": [
        2,
        "always",
        10
      ],
      "scope-empty": [
        2,
        "always"
      ],
      "subject-empty": [
        2,
        "always"
      ],
      "type-empty": [
        2,
        "always"
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^6.1.3",
    "@angular/compiler": "^6.1.3",
    "@angular/core": "^6.1.3",
    "@angular/forms": "^6.1.3",
    "@angular/http": "^6.1.3",
    "@angular/platform-browser": "^6.1.3",
    "@angular/platform-browser-dynamic": "^6.1.3",
    "@angular/router": "^6.1.3",
    "bootstrap": "^4.1.3",
    "core-js": "^2.5.7",
    "rxjs-compat": "^6.3.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.7.4",
    "@angular-devkit/core": "^0.7.4",
    "@angular-devkit/schematics": "^0.7.4",
    "@angular/cli": "~6.1.4",
    "@angular/compiler-cli": "^6.1.3",
    "@angular/language-service": "^6.1.3",
    "@angularclass/hmr": "^2.1.3",
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-conventional": "^7.1.1",
    "@ngrx/schematics": "^6.1.0",
    "@types/faker": "^4.1.3",
    "@types/jest": "^22.2.3",
    "@types/node": "~10.7.1",
    "chance": "^1.0.16",
    "codelyzer": "~4.4.4",
    "faker": "^4.1.0",
    "git-branch-is": "^2.0.0",
    "hotel": "^0.8.7",
    "husky": "^0.14.3",
    "jasmine-marbles": "^0.3.1",
    "jest": "^23.3.0",
    "jest-preset-angular": "^5.2.3",
    "json-server": "^0.14.0",
    "lint-staged": "^7.2.2",
    "ng-mocks": "^6.2.1",
    "ngw": "^6.0.8",
    "prettier": "^1.14.2",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "superstatic": "^6.0.1",
    "ts-node": "~7.0.1",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-sonarts": "^1.8.0",
    "typescript": "~2.9.2",
    "webpack-visualizer-plugin": "^0.1.11",
    "yarn-run-all": "^3.1.1"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "moduleNameMapper": {
      "@core/(.*)": "<rootDir>/src/app/core/$1",
      "@shared/(.*)": "<rootDir>/src/app/shared/$1",
      "@modules/(.*)": "<rootDir>/src/app/shared/$1",
      "@environment/(.*)": "<rootDir>/src/environments/$1"
    },
    "collectCoverageFrom": [
      "src/app/**/*.ts",
      "!<rootDir>/node_modules*",
      "!<rootDir>/dist/"
    ]
  }
}
